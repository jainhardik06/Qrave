{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "npmScope": "qrave",
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["default", "^default"]
    },
    "lint": {
      "inputs": ["default", "{workspaceRoot}/.eslintrc.json"]
    },
    "test": {
      "inputs": ["default", "^default"]
    }
  },
  "workspaceLayout": {
    "appsDir": "apps",
    "libsDir": "libs"
  },
  "projects": {
    "api": "apps/api",
    "web": "apps/web"
  }
}
